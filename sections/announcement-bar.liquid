{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div style="background: {{ block.settings.color_scheme }}; color: {{ block.settings.background_scheme }}">
        {%- if block.settings.text != blank -%}
          <div class="px-4 lg:px-8">
            {% if block.settings.url != blank %}
              <a href="{{ block.settings.url }}" class="block">
            {% endif %}

              <p class="py-3 text-center">{{ block.settings.text }}</p>    
            
            {% if block.settings.url != blank %}
              </a>
            {% endif %}
          </div>
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "color",
          "id": "color_scheme",
          "default": "#444",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.color.label"
        },
        {
          "type": "color",
          "id": "background_scheme",
          "default": "#fff",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.background.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
